.find-parcel
    .activity
        animation: spin 2s infinite linear;

    @keyframes spin
        0%
            transform: rotate(0deg)
        100%
            transform: rotate(359deg)
    .callout
        border 1px solid #eee
        border-left-width 5px
        border-radius 3px
        h4, p
            padding-left 5px
    .error-callout
        border-left-color: #ce4844
